# Test Environment Configuration
NODE_ENV=test

# Database Configuration (SQLite in-memory for tests)
DATABASE_TYPE=sqlite
DATABASE_DATABASE=:memory:

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-for-production
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-only-not-for-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Server Configuration
PORT=3001

# Disable external services for tests
DISABLE_AUTH=false
DISABLE_SWAGGER=true